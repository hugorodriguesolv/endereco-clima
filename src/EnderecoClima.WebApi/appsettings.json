{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Providers": {
    "BrasilApi": { "BaseUrl": "https://brasilapi.com.br/" },
    "ViaCep": { "BaseUrl": "https://viacep.com.br" }
  },

  "HttpResilience": {
    "BrasilApi": {
      "AttemptTimeout": { "Timeout": "00:00:02" },
      "Retry": {
        "MaxRetryAttempts": 2,
        "Delay": "00:00:00.200"
      },
      "CircuitBreaker": {
        "SamplingDuration": "00:00:30",
        "FailureRatio": 0.5,
        "MinimumThroughput": 10,
        "BreakDuration": "00:00:15"
      }
    },
    "ViaCep": {
      "AttemptTimeout": { "Timeout": "00:00:03" },
      "Retry": {
        "MaxRetryAttempts": 1,
        "Delay": "00:00:00.150"
      },
      "CircuitBreaker": {
        "SamplingDuration": "00:00:30",
        "FailureRatio": 0.5,
        "MinimumThroughput": 10,
        "BreakDuration": "00:00:10"
      }
    }
  }
}